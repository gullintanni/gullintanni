<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title><%= @title %></title>

  <link rel="icon" href="/images/favicon.png">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/4.2.0/normalize.min.css">

  <style type="text/css">
    body {
      color: #3C2F20;
      margin: 0 auto;
      max-width: 60em;
      padding: 16px 20px;
    }

    a:link,
    a:visited {
      text-decoration: none;
    }
    a:link:focus,
    a:visited:focus {
      text-decoration: underline;
      color: #255F92;
    }
    a:link {
      color: #2F79B9;
    }
    a:visited {
      color: #553A7D;
    }
    a:link:hover,
    a:visited:hover {
      text-decoration: underline;
      color: #255F92;
    }
    a:link:active,
    a:visited:active {
      text-decoration: underline;
      color: #255F92;
    }

    code {
      background-color: #E7E7EB;
      border: 4px solid #E7E7EB;
      border-radius: 4px;
      font-family: "Inconsolata", "Courier New", Courier, mono;
    }

    table {
      width: 100%;
      border: solid 1px #CCC;
      border-radius: 6px;
      border-collapse: separate;
      border-spacing: 0;
      overflow: hidden;
    }
    tr {
      transition-duration: 0.25s;
      transition-timing-function: ease;
      transition-property: background;
    }
    tbody > tr:hover {
      background: #F7F7F9;
    }
    tr td {
      border-top: solid 1px #CCC;
    }
    tr:first-child td {
      border-top: none;
    }
    th {
      border-bottom: solid 2px #CCC;
      color: #AB6800;
      font-weight: bold;
      text-align: left;
    }
    th, td {
      padding: 10px 10px 8px;
      border-left: solid 1px #CCC;
    }
    th:first-child, td:first-child {
      border-left: none;
    }

    .fill-link {
      overflow: hidden;
    }
    .fill-link > * {
      display: block;
      margin: -10em;
      padding: 10em;
    }

    .logo {
      float: right;
      height: 90px;
      margin-right: 20px;
      width: 90px;
    }

    .info {
      background-color: #D8EDF8;
    }
    .success {
      background-color: #DFF0D7;
    }
    .warning {
      background-color: #FCF8E2;
    }
    .danger {
      background-color: #F2DEDE;
    }
  </style>
</head>
<body>
<%= cond do %>
  <% Keyword.has_key?(assigns, :pipelines) -> %>
    <%= overview(@pipelines) %>
  <% Keyword.has_key?(assigns, :pipeline) -> %>
    <%= detail(@pipeline) %>
<% end %>
</body>
</html>
